#!/usr/bin/env bash
#
# Usage: `0.launch [--docker] [data_source]`

if [ -f /.dockerenv ]; then
	echo "This script launches a HOPS docker container; \
avoid running it inside a container"
	exit 1
fi

if [ x"$1" == x"--docker" ]; then
	USE_DOCKER=true
        shift
fi

if [ x"$1" == x ]; then
	SRCDIR=/data
else
	SRCDIR="$1"
fi

case "$PWD" in
	*/hops-hi/*)
	BAND='hi'
	;;
	*)
	BAND='lo'
	;;
esac

SHAREDIR="$PWD/../../share"

if [ x"$USE_DOCKER" == x"true" ]; then
	echo "0. Launching an interactive HOPS docker container"
	echo "	Host source: $SRCDIR"
	echo "	Host work:   $PWD"
	echo "	BAND:        $BAND"
	echo "	SHARE:       $SHAREDIR"
	sudo docker run --rm -it \
		-e BAND="$BAND" \
		-v "$SRCDIR:/data:ro" \
		-v "$PWD:/root" \
		-v "$SHAREDIR:/usr/local/pipeline/share" \
		eventhorizontelescope/hops-stack
else
	echo "0. Setting up an interactive HOPS environment"
	echo "	Source: $SRCDIR"
	echo "	Work:   $PWD"
	echo "	BAND:   $BAND"
	echo "	SHARE:  $SHAREDIR"
	cp "$SHAREDIR/summary.ipynb" .
	# Add more HOPS setup scripts here
fi
