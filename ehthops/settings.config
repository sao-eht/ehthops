# list of directory names separated by ':' under $SRCDIR
ASSIGN_CORRDAT="2016.1.01154.V"

# directory where campaign metadata are to be found
ASSIGN_METADIR="/n/holylfs05/LABS/bhi/Lab/doeleman_lab/inatarajan/hops-tutorials/ehthops/ehthops/meta/eht2017/230GHz"

# path to eht-imaging source code
